    </div>


</div>

@section styles
{
    @System.Web.Optimization.Styles.Render("~/bundles/css/select2")
    
}

@section pagejs
{
    @System.Web.Optimization.Scripts.Render("~/bundles/js/select2")
    <script>
        $(function () {
            $(".select2me").select2({
                placeholder: "Select",
                width: "resolve",
                allowClear: true,
                language: "zh-CN"
            })
        })
    </script>
}



