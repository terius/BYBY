    <div class="portlet light bordered">
        <div class="portlet-body">
            <form id="formadd" method="post" action="/TEST/CreateUser">
                <table cellpadding="3">
                    <tr>
                        <td>用户名</td>
                        <td>
                            <input id="UserName" name="UserName" style="width: 250px" />
