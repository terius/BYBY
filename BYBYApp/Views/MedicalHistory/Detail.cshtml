                        modalclass: "modal-full"

                    },
                    md: {}
                },
                mounted: function () {
                }
            })
         



            /*********************男方病历*********************/
            var vueMaleDetail = new Vue({
                el: '#medical-detail-male',
                data: {
                    malemdlist: allData.MaleMedicalDetails
