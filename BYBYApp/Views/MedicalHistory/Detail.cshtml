@model BYBYApp.Models.MedicalHistoryDetailModel
@{
    ViewBag.Title = "病历详情";
}

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            病历详情
        </div>
    </div>

    <div class="portlet-body">
        <div class="row">
            <div class="col-md-12 title-patient">
                <div class="col-md-3">
                    <span class="female">@Model.EditModel.FemaleName</span>
                    <span class="age">@Model.EditModel.FemaleAge</span>
                </div>
                <div class="col-md-3">
                    <span class="male">@Model.EditModel.MaleName</span>
                    <span class="age">@Model.EditModel.MaleAge</span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="tabbable-custom">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tab_1_1" data-toggle="tab">基本信息</a>
                        </li>
                        <li>
                            <a href="#tab_1_2" data-toggle="tab">女方信息</a>
                        </li>
                        <li>
                            <a href="#tab_1_3" data-toggle="tab">男方信息</a>
                        </li>
                        <li>
                            <a href="#tab_1_4" data-toggle="tab">病历附件</a>
                        </li>

                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1_1">
                            <div class="row" id="base-info" v-cloak>
                                <div class="col-md-12" style="padding:10px" id="view-patient">
                                    <div class="form-inline">
                                        <div class="viewmode">
                                            <div class="col-md-12">
                                                <div class="viewtitle">
                                                    <span class="caption">患者卡号信息</span>
                                                    <div class="actions">
                                                        <button type="button" class="btn btn-outline blue" id="btnEdit">编辑</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="info-title">病历号:</label>
                                                    <label class="info-value">{{info.MedicalHistoryNo}}</label>
                                                </div>

                                            </div>
                                            <div class="col-md-12">
                                                <div class="viewtitle">联系方式及备注</div>
                                            </div>

                                            <div class="col-md-12 underline">

                                                <div class="form-group">
                                                    <label class="info-title">女方电话:</label>
                                                    <label class="info-value">{{info.FemalePhone}}</label>
                                                </div>

                                                <div class="form-group">
                                                    <label class="info-title">男方电话:</label>
                                                    <label class="info-value">{{info.MalePhone}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">固定电话:</label>
                                                    <label class="info-value">{{info.FixPhone}}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-12 underline">
                                                <div class="form-group">
                                                    <label class="info-title">通讯地址:</label>
                                                    <label class="info-value">{{info.Address}}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-12 underline">
                                                <div class="form-group">
                                                    <label class="info-title">备注:</label>
                                                    <label class="info-value">{{info.Remark}}</label>
                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <div class="viewtitle">女方信息</div>
                                            </div>
                                            <div class="col-md-12 underline">
                                                <div class="form-group">
                                                    <label>姓名:</label>
                                                    <label class="info-value">{{info.FemaleName}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label>出生年月:</label>
                                                    <label class="info-value">{{info.FemaleBirthday}}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-12 underline">
                                                <div class="form-group">
                                                    <label class="info-title">证件类型:</label>
                                                    <label class="info-value">{{info.FemaleCardTypeText}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">证件号:</label>
                                                    <label class="info-value">{{info.FemaleCardNo}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">婚姻状况:</label>
                                                    <label class="info-value">{{info.FemaleMarriageText}}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-12 underline">
                                                <div class="form-group">
                                                    <label class="info-title">国籍:</label>
                                                    <label class="info-value">{{info.FemaleNationText}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">职业:</label>
                                                    <label class="info-value">{{info.FemaleJobText}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">民族:</label>
                                                    <label class="info-value">{{info.FemaleEthnicText}}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-12 underline">
                                                <div class="form-group">
                                                    <label class="info-title">文化程度:</label>
                                                    <label class="info-value">{{info.FemaleEducationText}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">籍贯:</label>
                                                    <label class="info-value">{{info.FemaleNativePlace}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">户口地址:</label>
                                                    <label class="info-value">{{info.FemaleHouseholdAddress}}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="viewtitle">男方信息</div>
                                            </div>
                                            <div class="col-md-12 underline">
                                                <div class="form-group">
                                                    <label class="info-title">姓名:</label>
                                                    <label class="info-value">{{info.MaleName}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">出生年月:</label>
                                                    <label class="info-value">{{info.MaleBirthday}}</label>
                                                </div>

                                            </div>
                                            <div class="col-md-12 underline">
                                                <div class="form-group">
                                                    <label class="info-title">证件类型:</label>
                                                    <label class="info-value">{{info.MaleCardTypeText}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">证件号:</label>
                                                    <label class="info-value">{{info.MaleCardNo}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">婚姻状况:</label>
                                                    <label class="info-value">{{info.MaleMarriageText}}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-12 underline">
                                                <div class="form-group">
                                                    <label class="info-title">国籍:</label>
                                                    <label class="info-value">{{info.MaleNationText}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">职业:</label>
                                                    <label class="info-value">{{info.MaleJobText}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">民族:</label>
                                                    <label class="info-value">{{info.MaleEthnicText}}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-12 underline">
                                                <div class="form-group">
                                                    <label class="info-title">文化程度:</label>
                                                    <label class="info-value">{{info.MaleEducationText}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">籍贯:</label>
                                                    <label class="info-value">{{info.MaleNativePlace}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="info-title">户口地址:</label>
                                                    <label class="info-value">{{info.MaleHouseholdAddress}}</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-12" style="display:none" id="edit-patient">
                                    <form method="post" action="@Url.Action("SaveAdd","MedicalHistory")" id="saveForm">
                                        <div class="form-inline">
                                            <div class="editmode" id="editform">
                                                <div class="col-md-12">
                                                    <div class="viewtitle">患者卡号信息</div>

                                                </div>
                                                <div class="col-md-12">
                                                    <edit-input id="MedicalHistoryNo" text="病历号" myclass="w300" v-model="info.MedicalHistoryNo">
                                                    </edit-input>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="viewtitle">联系方式及备注</div>
                                                </div>
                                                <div class="col-md-12">
                                                    <edit-input id="FemalePhone" maxlength="100" text="女方电话" v-model="info.FemalePhone">
                                                    </edit-input>
                                                    <edit-input id="MalePhone" maxlength="100" text="男方电话" v-model="info.MalePhone">
                                                    </edit-input>
                                                    <edit-input id="FixPhone" maxlength="50" text="固定电话" v-model="info.FixPhone">
                                                    </edit-input>
                                                </div>
                                                <div class="col-md-12">
                                                    <edit-input id="Address" text="通讯地址" myclass="w450" v-model="info.Address">
                                                    </edit-input>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="Address">备注</label>
                                                        <textarea id="Remark" name="Remark" class="form-control w450" rows="3" cols="20" v-model="info.Remark"></textarea>
                                                    </div>
                                                </div>

                                                <div class="col-md-12">
                                                    <div class="viewtitle">女方信息</div>
                                                </div>
                                                <div class="col-md-12">
                                                    <edit-input id="FemaleName" text="姓名" myclass="required" v-model="info.FemaleName">
                                                        <span slot="othertext" class="requiredspan">*</span>
                                                    </edit-input>
                                                    <date-picker id="FemaleBirthday" text="出生年月" myclass="required" defaultDate="1980-01-01" v-model="info.FemaleBirthday">
                                                        <span slot="othertext" class="requiredspan">*</span>
                                                    </date-picker>

                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="FemaleCardType">证件类型<span class="requiredspan">*</span></label>
                                                        <select2 id="FemaleCardType" class="required w196" data-placeholder="--请选择证件类型--" errormessage="证件类型不能为空"
                                                                 :options="info.CardTypeList" v-model="info.FemaleCardType">

                                                        </select2>
                                                    </div>
                                                    <edit-input id="FemaleCardNo" text="证件号" myclass="required" v-model="info.FemaleCardNo">
                                                        <span slot="othertext" class="requiredspan">*</span>
                                                    </edit-input>
                                                    <div class="form-group">
                                                        <label for="FemaleCardType">婚姻状况</label>
                                                        <select2 id="FemaleMarriage" class="w196" data-placeholder="--请选择婚姻状况--" :options="info.MarriageList" v-model="info.FemaleMarriage">
                                                        </select2>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="FemaleNation">国籍</label>
                                                        <select2 id="FemaleNation" class="w196" data-placeholder="--请选择国籍--" :options="info.NationList" v-model="info.FemaleNation">
                                                        </select2>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="FemaleJob">职业</label>
                                                        <select2 id="FemaleJob" class="w196" data-placeholder="--请选择职业--" :options="info.JobList" v-model="info.FemaleJob">
                                                        </select2>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="FemaleEthnic">民族</label>
                                                        <select2 id="FemaleEthnic" class="w196" data-placeholder="--请选择职业--" :options="info.EthnicList" v-model="info.FemaleEthnic">
                                                        </select2>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="FemaleEducation">文化程度</label>
                                                        <select2 id="FemaleEducation" class="w196" data-placeholder="--请选择文化程度--" :options="info.EducationList" v-model="info.FemaleEducation">
                                                        </select2>
                                                    </div>
                                                    <edit-input id="FemaleNativePlace" text="籍贯" v-model="info.FemaleNativePlace">
                                                    </edit-input>
                                                    <edit-input id="FemaleHouseholdAddress" myclass="w400" text="户口地址" v-model="info.FemaleHouseholdAddress">
                                                    </edit-input>
                                                </div>


                                                @*男方信息*@
                                                <div class="col-md-12">
                                                    <div class="viewtitle">男方信息</div>
                                                </div>
                                                <div class="col-md-12">
                                                    <edit-input id="MaleName" text="姓名" myclass="required" v-model="info.MaleName">
                                                        <span slot="othertext" class="requiredspan">*</span>
                                                    </edit-input>
                                                    <date-picker id="MaleBirthday" text="出生年月" myclass="required" defaultDate="1980-01-01" v-model="info.MaleBirthday">
                                                        <span slot="othertext" class="requiredspan">*</span>
                                                    </date-picker>

                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="MaleCardType">证件类型<span class="requiredspan">*</span></label>
                                                        <select2 id="MaleCardType" class="required w196" data-placeholder="--请选择证件类型--" errormessage="证件类型不能为空" :options="info.CardTypeList" v-model="info.MaleCardType">

                                                        </select2>
                                                    </div>
                                                    <edit-input id="MaleCardNo" text="证件号" myclass="required" v-model="info.MaleCardNo">
                                                        <span slot="othertext" class="requiredspan">*</span>
                                                    </edit-input>
                                                    <div class="form-group">
                                                        <label for="MaleCardType">婚姻状况</label>
                                                        <select2 id="MaleMarriage" class="w196" data-placeholder="--请选择婚姻状况--" :options="info.MarriageList" v-model="info.MaleMarriage">
                                                        </select2>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="MaleNation">国籍</label>
                                                        <select2 id="MaleNation" class="w196" data-placeholder="--请选择国籍--" :options="info.NationList" v-model="info.MaleNation">
                                                        </select2>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="MaleJob">职业</label>
                                                        <select2 id="MaleJob" class="w196" data-placeholder="--请选择职业--" :options="info.JobList" v-model="info.MaleJob">
                                                        </select2>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="MaleEthnic">民族</label>
                                                        <select2 id="MaleEthnic" class="w196" data-placeholder="--请选择职业--" :options="info.EthnicList" v-model="info.MaleEthnic">
                                                        </select2>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="MaleEducation">文化程度</label>
                                                        <select2 id="MaleEducation" class="w196" data-placeholder="--请选择文化程度--" :options="info.EducationList" v-model="info.MaleEducation">
                                                        </select2>
                                                    </div>
                                                    <edit-input id="MaleNativePlace" text="籍贯" v-model="info.MaleNativePlace">
                                                    </edit-input>
                                                    <edit-input id="MaleHouseholdAddress" myclass="w400" text="户口地址" v-model="info.MaleHouseholdAddress">
                                                    </edit-input>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-actions">
                                            <div class="row">
                                                <div class="col-md-offset-3 col-md-4">
                                                    <button type="button" class="btn btn-outline blue" id="btnSave">提交</button>
                                                    <a href="@Url.Action("Index","MedicalHistory")" type="button" class="btn btn-outline blue margin-left-20" id="btnCancel">返回</a>

                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>


                        <div class="tab-pane" id="tab_1_2">
                            女方信息
                        </div>

                        <div class="tab-pane" id="tab_1_3">
                            男方信息
                        </div>
                        <div class="tab-pane" id="tab_1_4">
                            病历附件
                        </div>
                    </div>
                </div>

            </div>

        </div>



    </div>
</div>
@section styles
{
    @System.Web.Optimization.Styles.Render("~/bundles/css/select2")
    @System.Web.Optimization.Styles.Render("~/bundles/css/datetimepicker")
}

@section pagejs
{
    @System.Web.Optimization.Scripts.Render("~/bundles/js/select2")
    @System.Web.Optimization.Scripts.Render("~/bundles/js/datetimepicker")
    @System.Web.Optimization.Scripts.Render("~/bundles/js/jqueryvalidate")
    @System.Web.Optimization.Scripts.Render("~/bundles/js/jqueryform")

    <script>
        $(function () {

            var allData = @Html.RenderAsJson(Model);
            var vueadd = new Vue({
                el: '#base-info',
                data: {
                    info: allData.EditModel
                },
                mounted: function () {
                    // com.setContentHeight("#editform",)
                    //  App.initSlimScroll('#editform');

                },
                methods: {

                }
            })

            $("#btnEdit").on("click", function() {
                if ($("#view-patient").is(":visible"))
                {
                    $("#view-patient").hide();
                    $("#edit-patient").show();
                }
            })
        })
    </script>
    <script src="~/Scripts/page/MedicalHistoryDetail.js"></script>
}

