@model BYBYApp.Models.MedicalHistoryListModel
@{
    ViewBag.Title = "病历管理";
    var rolename = Request.Cookies["AccountCookies"] == null ? "" : Request.Cookies["AccountCookies"].Values["rolename"];


}

@*<div class="page-content-title">
        <span class="title">病历管理</span>
