<div class="row">
    <div class="col-md-12">
    <a  href="#modal-file-upload" data-toggle="modal" class="btn btn-outline blue" id="btnUploadFile">上传文件</a></div>
</div>
<div class="row">
    <div class="col-md-12">
        <ul class="ul-img-list" id="mdimages">
            <li>
                <img data-original="/images/doctorback.png" src="~/images/doctorback.png" height="100" width="150" />
                <i class="fa fa-2x fa-trash-o blue delete" title="删除图片"></i>
            </li>
            <li>
                <img data-original="/images/doctor.png" src="~/images/doctor.png" height="100" width="150" />
                <i class="fa fa-2x fa-trash-o blue delete" title="删除图片"></i>
            </li>
            <li>
                <img data-original="/images/patient.png" src="~/images/patient.png" height="100" width="150" />
                <i class="fa fa-2x fa-trash-o blue delete" title="删除图片"></i>
